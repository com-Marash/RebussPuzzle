<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beach1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/BackToHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:layout_marginStart="20dp"
            android:onClick="BackToHomePage"
            android:text="@string/BackToHome"
            android:textColor="@color/colorGold"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/levelNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.40"
            android:textColor="@color/colorGold"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:id="@+id/numberOfCoins"
            android:textSize="20sp"
            android:textColor="@color/colorGold"
            android:gravity="end"/>

        <ImageView
            android:id="@+id/coinBankImage"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.20"
            android:onClick="coinBank"
            android:src="@drawable/coin_box"
            android:layout_gravity="start"
            android:paddingTop="5dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/selectedImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.35"
            android:scaleType="fitXY" />

        <GridView
            android:id="@+id/sol_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:horizontalSpacing="3dp"
            android:numColumns="8"
            android:verticalSpacing="3dp" />

        <GridView
            android:id="@+id/characters"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.30"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:columnWidth="50dp"
            android:horizontalSpacing="4dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="4dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:id="@+id/helpButton"
            android:src="@drawable/help"
            android:layout_gravity="end"
            android:paddingBottom="7dp"
            android:onClick="helpWanted"/>

    </LinearLayout>

</RelativeLayout>
