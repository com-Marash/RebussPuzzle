<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/selectedImage"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectedImage"
        android:layout_marginTop="50sp"
        android:id="@+id/sol_1"
        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/sol_1"
        android:layout_toRightOf="@+id/sol_1"
        android:layout_below="@+id/selectedImage"
        android:layout_marginTop="50sp"
        android:id="@+id/sol_2"
        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/sol_2"
        android:layout_toRightOf="@+id/sol_2"
        android:layout_below="@+id/selectedImage"
        android:layout_marginTop="50sp"
        android:id="@+id/sol_3"
        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp" />


    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sol_1"
        android:layout_marginTop="30sp"
        android:numColumns="3"
        android:horizontalSpacing="4sp"
        android:verticalSpacing="4sp"
        android:listSelector="#9f2cb5"
        android:id="@+id/characters"/>


</RelativeLayout>
