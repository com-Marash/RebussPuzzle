<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/puzzleSolvedBar"
        android:padding="10dp">

        <pl.droidsonroids.gif.GifTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:background="@drawable/winanimation" />

        <TextView
            android:text="@string/puzzle_solved"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.40"
            android:id="@+id/textView_puzzleSolved"
            android:textSize="28sp"
            android:textColor="@color/colorCorrectPuzzle"/>

        <pl.droidsonroids.gif.GifTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:background="@drawable/winanimation" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.40"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.30"
            android:gravity="end"
            android:text="@string/winningCoins"
            android:textColor="@color/colorGold"
            android:textSize="20sp" />

        <pl.droidsonroids.gif.GifTextView
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="0.70"
            android:background="@drawable/gold_coins_chest"
            android:gravity="start" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.30"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:background="@drawable/button_rounded_corners_gradient"
            android:padding="10dp"
            android:text="@string/returnbutton"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"
            android:onClick="returnButtonFunction"
            android:id="@+id/return_Button"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:background="@drawable/button_rounded_corners_gradient"
            android:layout_marginStart="70dp"
            android:padding="10dp"
            android:text="@string/next"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"
            android:onClick="NextLevelFunction"/>

    </LinearLayout>

</LinearLayout>