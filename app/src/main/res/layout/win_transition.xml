<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Puzzle solved!!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="136dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="71dp"
        android:id="@+id/textView_puzzleSolved"
        android:textSize="45sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_puzzleSolved"
        android:layout_marginTop="60dp"
        android:text="Return"
        android:textSize="25sp"
        android:onClick="returnButtonFunction"
        android:id="@+id/return_Button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_puzzleSolved"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/return_Button"
        android:layout_toRightOf="@+id/return_Button"
        android:text="Next Level"
        android:textSize="25sp"
        android:onClick="NextLevelFunction"/>



</RelativeLayout>