<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:id="@+id/puzzleSolvedBar">

        <pl.droidsonroids.gif.GifTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:background="@drawable/winanimation"
            />

        <TextView
            android:text="@string/puzzle_solved"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.40"
            android:id="@+id/textView_puzzleSolved"
            android:textSize="28sp"
            android:textColor="@color/colorCorrectPuzzle"/>

        <pl.droidsonroids.gif.GifTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:background="@drawable/winanimation"
            />

    </LinearLayout>

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded_corners_gradient"
        android:layout_below="@+id/puzzleSolvedBar"
        android:layout_marginTop="120dp"
        android:layout_marginStart="20dp"
        android:padding="20dp"
        android:layout_alignParentStart="true"
        android:text="@string/returnbutton"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"
        android:onClick="returnButtonFunction"
        android:id="@+id/return_Button"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded_corners_gradient"
        android:layout_below="@+id/puzzleSolvedBar"
        android:layout_marginTop="120dp"
        android:layout_marginStart="70dp"
        android:padding="20dp"
        android:layout_toEndOf="@+id/return_Button"
        android:text="@string/next"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"
        android:onClick="NextLevelFunction"/>



</RelativeLayout>